<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contents"
        android:visibility="gone"
        >
        <RelativeLayout
        android:id="@+id/layout_landscape"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
            <ImageView
            android:id="@+id/imgLogoLandscape"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
             android:contentDescription="@string/contentDescriptionText"
             >
            </ImageView>
        <TextView
            android:id="@+id/namel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/imgLogoLandscape"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />
        <TextView
            android:id="@+id/categoryl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/namel"
            />
        <RatingBar
            android:id="@+id/ratingl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:isIndicator="true"
            android:layout_below="@+id/categoryl"
            style="@style/Widget.AppCompat.RatingBar.Small"
            />

        <TextView
            android:id="@+id/reviewl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/ratingl"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_portrate"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgLogoPortrate"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:adjustViewBounds="true"

        android:contentDescription="@string/contentDescriptionText"
        >
    </ImageView>
        <TextView
            android:id="@+id/namep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgLogoPortrate"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/categoryp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/imgLogoPortrate"
            android:layout_below="@+id/namep"
            tools:ignore="RtlHardcoded" />
        <RatingBar
            android:id="@+id/ratingp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:isIndicator="true"
            android:layout_below="@+id/categoryp"
            android:layout_toRightOf="@+id/imgLogoPortrate"

            style="@style/Widget.AppCompat.RatingBar.Small"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/reviewp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/ratingp"
            android:layout_toRightOf="@+id/imgLogoPortrate"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contents"
        android:id="@+id/contentsdetail"
        android:orientation="vertical"
        android:visibility="gone" >
        <RelativeLayout
            android:id="@+id/linethree"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#22428E" >
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnPhone"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imgPhone"
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/contentDescriptionText"
                android:src="@drawable/mobile" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imgPhone"
                android:textColor="#22428E"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded" />

            <RelativeLayout
                android:id="@+id/linetwo"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#22428E" >
            </RelativeLayout>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btnLocation"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/contentDescriptionText"
            android:src="@drawable/map" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imgLocation"
            android:textColor="#22428E"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/lineone"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#22428E" >
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>

